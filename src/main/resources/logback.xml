<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE logback>
<logback>
    <appender username="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} [%thread] %-5level %logger{15}#%line %msg\n</pattern>
        </encoder>
    </appender>

    <logger username="springsecurityapp">
        <level value="debug"/>
    </logger>

    <logger username="org.springframework">
        <level value="info"/>
    </logger>

    <root>
        <level value="error"/>
        <appender-ref ref="STDOUT"/>
    </root>
</logback>